<style>
footer {
  font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
  letter-spacing: 0.01em;
}
/* Los iconos ya no tendrán animación ni cambio de tamaño al hacer hover */
footer svg {
  /* Sin transición */
}
footer a:hover svg {
  /* Sin transformación */
}
footer input:focus {
  box-shadow: 0 0 0 3px rgba(251, 191, 36, 0.15);
}
@media (max-width: 768px) {
  footer .flex-col.md\:flex-row {
    flex-direction: column !important;
    align-items: flex-start !important;
    gap: 2rem !important;
  }
  footer .flex-1.flex-col.items-start.md\:items-end {
    align-items: flex-start !important;
    width: 100%;
  }
  footer form {
    width: 100%;
  }
}
</style>

<style>
  /* Smooth scrolling for footer links */
  footer a[href^="#"] {
    scroll-behavior: smooth;
  }

  /* Newsletter input focus effect */
  footer input:focus {
    box-shadow: 0 0 0 3px rgba(251, 191, 36, 0.1);
  }

  /* Hover effects for social icons */
  footer a:hover svg {
    transform: scale(1.1);
    transition: transform 0.2s ease;
  }

  /* Decorative wave animation */
  footer svg path {
    animation: wave 6s ease-in-out infinite;
  }

  footer svg path:nth-child(2) {
    animation-delay: -2s;
  }

  footer svg path:nth-child(3) {
    animation-delay: -4s;
  }

  @keyframes wave {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-10px);
    }
  }
</style>
